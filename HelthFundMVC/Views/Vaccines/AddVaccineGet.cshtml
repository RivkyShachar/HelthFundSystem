@model HelthFundData.Models.Vaccine

@{
    ViewData["Title"] = "AddVaccine";
}

<h4>Vaccine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVaccinePost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
            <div class="form-group">
                <label asp-for="VaccineManufacturer" class="control-label"></label>
                <input asp-for="VaccineManufacturer" class="form-control" />
                <span asp-validation-for="VaccineManufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccineDate" class="control-label"></label>
                <input asp-for="VaccineDate" class="form-control" />
                <span asp-validation-for="VaccineDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddVaccine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

